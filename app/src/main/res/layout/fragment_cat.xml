<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/tv_plus_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="24sp"
        tools:text="100"
        android:layout_alignBaseline="@+id/tv_plus_2"
        android:layout_alignBottom="@+id/tv_plus_2"
        android:layout_toEndOf="@+id/tv_plus_2" />

    <TextView
        android:id="@+id/tv_plus_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        tools:text="100"
        android:layout_alignTop="@+id/cat_image"
        android:layout_alignEnd="@+id/tv_plus_1"
        android:layout_marginEnd="22dp" />

    <TextView
        android:id="@+id/tv_plus_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:textSize="24sp"
        tools:text="100"
        android:layout_below="@+id/tv_plus_3"
        android:layout_alignStart="@+id/cat_image" />

    <ImageView
        android:id="@+id/cat_image"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="27dp"
        android:src="@drawable/cat" />

</RelativeLayout>